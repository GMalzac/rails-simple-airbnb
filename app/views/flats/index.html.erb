<div class="container">
<h1>All our flats (<%= Flat.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-sm-6 col-md-4">
        <div class="card">
          <div class="card-thumbnail">
            <h4><%= flat.name %></h4>
            <p><%= flat.address %></p>
            <p><i class="fas fa-users"></i> <%= flat.number_of_guests %> <i class="fas fa-euro-sign pl-3"></i> <%= flat.price_per_night %></p>
          </div>
          <div class="card-footer">
            <%= link_to "More info", flat_path(flat) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
